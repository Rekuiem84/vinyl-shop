---
let { title } = Astro.props;
---

<header transition:animate="none">
	<h1>{title}</h1>
	<nav>
		<ul>
			<li><a href="/">Home</a></li>
		</ul>
	</nav>
</header>

<style>
	ul {
		display: flex;
		gap: 3rem;
		list-style: none;
	}
	a {
		text-decoration: none;
		color: inherit;
		font-size: 1.5rem;
	}
	header {
		display: flex;
		justify-content: space-between;
		align-items: center;
		padding: 1rem;
		background-color: #23262d;
		color: white;
	}
</style>
